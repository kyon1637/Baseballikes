<section class="inner">
　　<h2 class="section-ttl">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= render "layouts/error_messages", model: resource %>
  <div class="row form-group form-inline">
    <span class="col-xs-3"><%= f.label :email,'メールアドレス' %></span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
  </div>

  <div class="row form-group form-inline">
     <span class="col-xs-3"><%= f.label :password,'パスワード' %></span>
    <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="row form-group form-inline">
       <%= f.check_box :remember_me %>
      <span class="col-xs-3">
        <%= f.label :remember_me %>
      </span>  
    </div>
  <% end %>

  <div class="actions row">
    <%= f.submit "ログイン", class: "btn btn-primary btn-default col-xs-3 col-xs-offset-3" %>
  </div>
<% end %>

  <h2 class="section-ttl">登録がお済みでない方</h2>
  <p><%= link_to "こちら", new_user_registration_path, class: "underline" %>から新規登録を行なってください。</p>
</section>
