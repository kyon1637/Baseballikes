<div class="new_baseball">
   <h2>投稿編集</h2>
     <%= form_for(@baseball) do |f| %>
     <%= render 'layouts/error_messages', model: f.object %>
     <div class="new_baseball1">
          <%= attachment_image_tag @baseball, :baseball_image, class: "img-square", fallback: "no_image.jpg", size:"100x100" %>
	        <%= f.attachment_field :baseball_image, placeholder: "画像" %>
  	      <%= f.label :title, "タイトル" %>	
	        <%= f.text_field :title,class:"form-control" %>
	        <%= f.label :body, "内容" %>
	        <%= f.text_area :body,class:"form-control" %>
          <%= f.label :tag_list,"タグを,区切りで入力" %>
          <%= f.text_field :tag_list, value: @baseball.tag_list.join(","), class:"form-control", placeholder: "例aa,aa" %>
          <%= f.submit "更新する", class: "btn btn-primary" %>
      </div>
      <% end %>
</div>