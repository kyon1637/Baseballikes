  <% if user_signed_in? %>
          <% if baseball.favorited_by?(current_user) %>
              <%= link_to baseball_favorites_path(baseball), method: :delete, remote: true do %>
                <i class="fa fa-thumbs-up fa-2x" aria-hidden="true" style="color: blue;"></i>
              <%= baseball.favorites.count %> いいね
              <% end %>
              <% else %>
              <%= link_to baseball_favorites_path(baseball), method: :post, remote: true do %>
              <i class="fa fa-thumbs-up fa-2x" aria-hidden="true" style="color: gray;"></i>
              <%= baseball.favorites.count %> いいね
              <% end %>
          <% end %>
  <% end %>