<div class="container">    
    <div class="row">
       <%= render 'users/info', user: @user %>
         <div class="col-xs-4">
              <%= link_to"投稿",new_baseball_path %>
         </div>

         <div class="col-xs-8">
         	<h2>フォロワー一覧</h2>
         	    <table class="table">
         	    	<thead>
         	    	</thead>
         	    	<tbody>
         	    	  <% @user.followers.each do |user| %>
         	    	    <tr>
         	    	      <td>
         	    	      <%= attachment_image_tag user, :profile_image, :fill,60,60, format:'jpeg',class: "img-circle" %>
         	    	      </td>
         	    	      <td>
         	    	      <%= link_to user.name, user_path(user) %>
         	    	      </td>
         	    	      <td>
         	    	      <%= user.introduction %>
         	    	      </td>
         	    	    </tr>
         	    	    <% end %>
         	    	 </tbody>
         	    </table>
        </div>
    </div>
</div>             	    	