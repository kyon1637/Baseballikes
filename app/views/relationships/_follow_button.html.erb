<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= button_tag type: 'submit', class: 'btn btn-danger btn-block' do %>
      <i class="fa fa-user-circle-o fa-2x" aria-hidden="true"></i>フォロー解除
      <% end %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= button_tag type: 'submit', class: 'btn btn-success btn-block' do %>
      <i class="fa fa-user-circle-o fa-2x" aria-hidden="true"></i>フォローする
      <% end %>
    <% end %>
  <% end %>
<% end %>